<div class="user-paged">
  <div class="user-contentsd">
    <p class="user-named">ユーザー名：<%= @user.name %></p>
    <% if @user.followed_by?(current_user) %>
      <%= link_to "フォロー中", user_relationship_path(@user.id), data: { turbo_method: :delete }, class: "btn" %>
    <% else %>
      <%= link_to "フォローする", user_relationships_path(@user.id), data: { turbo_method: :post }, class: "btn" %>
    <% end %>
  </div>
</div>